<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="product"
            type="binar.academy.chapter4topic3.DataProduct" />

    </data>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_marginVertical="15dp"
                android:src="@{product.imgProduct}"
                android:layout_width="60dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/productName"
                android:layout_marginVertical="15dp"
                android:layout_toRightOf="@id/imgProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{product.nameProduct}" />

            <!--android:text="@{String.valueOf(product.priceProduct)}"-->

            <TextView
                android:id="@+id/productPrice"
                android:layout_marginVertical="15dp"
                android:layout_alignParentRight="true"
                android:text="@{product.priceProduct}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>